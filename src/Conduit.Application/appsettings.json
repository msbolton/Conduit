{
  "Conduit": {
    "ApplicationName": "My Conduit Application",
    "Version": "1.0.0",
    "Environment": "Development",

    "ComponentDiscovery": {
      "Enabled": true,
      "AssembliesToScan": [
        "MyApp.Components",
        "MyApp.Handlers"
      ],
      "PluginDirectories": [
        "./plugins"
      ],
      "EnableHotReload": false,
      "HotReloadInterval": 5000
    },

    "Messaging": {
      "Enabled": true,
      "MaxRetryAttempts": 3,
      "DeadLetterQueueSize": 1000,
      "EnableFlowControl": true,
      "MaxConcurrentMessages": 100
    },

    "Security": {
      "EnableAuthentication": false,
      "EnableAuthorization": false,
      "JwtSecretKey": "your-secret-key-here-change-in-production",
      "JwtIssuer": "Conduit",
      "JwtAudience": "Conduit",
      "JwtExpirationMinutes": 60,
      "EnableEncryption": false,
      "EncryptionKey": "your-encryption-key-here"
    },

    "Resilience": {
      "EnableCircuitBreaker": true,
      "CircuitBreakerFailureThreshold": 5,
      "CircuitBreakerTimeoutMs": 60000,
      "EnableRetry": true,
      "DefaultRetryCount": 3,
      "EnableTimeout": true,
      "DefaultTimeoutMs": 30000
    },

    "Features": {
      "EnableMetrics": true,
      "EnableHealthChecks": true,
      "EnableSwagger": true
    },

    "CustomSettings": {
      "DatabaseConnectionString": "Server=localhost;Database=myapp;",
      "CacheProvider": "Redis",
      "LogLevel": "Information"
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Conduit": "Debug"
    }
  },

  "AllowedHosts": "*"
}
